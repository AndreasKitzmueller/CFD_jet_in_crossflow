FoamFile { format ascii; class volVectorField; object U; }
dimensions      [0 1 -1 0 0 0 0];
internalField   uniform (0 0 0);

boundaryField
{
    inletMain   { type fixedValue; value uniform (0.6 0 0); }   // leftâ†’right
    outlet      { type zeroGradient; }

    jetInlet    { type fixedValue; value uniform (0 0.1 0); }    // upward jet (+y)

    top         { type noSlip; }
    floor       { type noSlip; }
    sideWalls   { type noSlip; }
    ductWalls   { type noSlip; }
}


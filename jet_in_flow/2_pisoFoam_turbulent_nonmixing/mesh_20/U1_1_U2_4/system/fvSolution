FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// ************************************************************************* //

solvers
{
    // --- Pressure solver ---
    p
    {
        solver          GAMG;
        tolerance       1e-6;
        relTol          0.1;
        smoother        DICGaussSeidel;
        nPreSweeps      0;
        nPostSweeps     2;
        cacheAgglomeration on;
        nCellsInCoarsestLevel 10;
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }

    // --- Final PISO pressure solve ---
    pFinal
    {
        $p;
        relTol          0;
        tolerance       1e-7;
    }

    // --- Velocity solver ---
    U
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-7;
        relTol          0;
    }

    // --- Turbulence variables ---
    k
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0.1;
    }

    omega
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0.1;
    }

    nut
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0;
    }
}

PIMPLE
{
    // PISO-like behaviour: only 1 outer loop
    nOuterCorrectors         1;

    // Inner PISO pressure correctors
    nCorrectors              3;

    nNonOrthogonalCorrectors 0;

    pRefCell                 0;
    pRefValue                0;

    momentumPredictor        yes;
}

relaxationFactors
{
    fields
    {
        p               0.3;
    }
    equations
    {
        U               0.7;
        k               0.7;
        omega           0.7;
        nut             0.7;
    }
}

// ************************************************************************* //

